<%- include('partials/header') %>
<%- include('partials/navbar2') %>
<div style="display: flex;">
  
  <div class="mainpage" style="width: 100%;">
    <%- include('partials/banner') %>
    <div style="width: 100%; max-width: 1200px;padding: 1rem;">
      <p>Login Now to Expreience all the services at their full potentialities.</p>
      <div style="margin-top: 20px;"><a class="button" href="/login">Get Started &rarr;</a></div>
    </div>
    <div style=" width: 100%;padding: 7px 0;max-width: 1200px;">
      <div>
        <% for(let i = 0; i < data.length; i++){ %>
          <div class="blocks" style="margin: 1rem 10px;display: inline-block;">
            <div class="block-image" style="width: inherit;display: flex;justify-content: center;background: black;">
              <img  src="<%= data[i].imageurl %>" height="inherit" alt="">
            </div>
            <div style="padding: 5px;">
              <div style="display: flex;justify-content: space-between;">
                <div><h3> <%= data[i].title %> </h3></div>
                <div>Qty : <span style="color: rgb(0, 23, 128);"><%= data[i].qty %></span></div>
              </div>
              <p style="font-size: 0.8rem;color: rgb(79, 79, 79);"><%= data[i].description.substring(0, 40)%> <% if(data[i].description.length > 40) { %><span>...</span><% } %></p>
              <div style="display: flex;justify-content: space-between;align-items: center;">
                <div>Price : <span style="color: rgb(0, 174, 12);"> â‚¹ <%= data[i].price %></span></div>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>